{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@lib/*": ["lib/*"],
            "@middlewares/*": ["middlewares/*"],
            "@routes/*": ["routes/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules"]
}
