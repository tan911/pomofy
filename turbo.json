{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalDotEnv": [".env"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "web#build": {
            "dependsOn": ["^build", "^db:generate"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "test": {},
        "db:generate": {
            "cache": false
        }
    }
}
